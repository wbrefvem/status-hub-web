<script>
    $(document).ready(function(){

    var menubutton = null;

    $('.menu').toggle(1);
    $('.fancy').toggle(1);

    $(".menuclose").click(function(){
    $('.menu').slideUp();
    $('.fancy').slideToggle();
    menubutton=0;
    if(menubutton){
    $('.menuopen').css("display", "none");
    }
    });

    $(".menuopen").click(function(){
    $('.menu').slideDown();
    $('.fancy').slideToggle();
    menubutton=" ";
    if(menubutton){
    $('.menuopen').css("display", "none");
    }
    });
    });
</script>
