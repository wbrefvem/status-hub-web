<section class="row">
    <form class="form-horizontal" style="margin: 0 auto;">
        <div class="form-group">
            <label class="control-label col-md-3">Title</label>
            <div class="col-md-6">
                {{input type="text" value=model.title viewName="title" class="form-control" placeholder="Project Title"}}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Description</label>
             <div class="col-md-6">
                {{input type="text" value=model.description viewName="description" class="form-control" placeholder="Project Description"}}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Start Date</label>
            <div class="col-md-6">
                {{input value=model.startDate viewName="startDate" class="form-control" placeholder="Start Date"}}
                <i><p style="text-indent: 15px;" class="help-block">YYYY-MM-DD</p></i>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">Start Time</label>
            <div class="col-md-6">
                {{input value=controllers.status/detail.startTime viewName=startTime class="form-control" placeholder="Start Time"}}
                 <i><p style="text-indent: 15px;" class="help-block">00:00:00</p></i>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">End Date</label>
             <div class="col-md-6">
                {{input value=model.endDate viewName="endDate" class="form-control" placeholder="End Date"}}
               <i><p style="text-indent: 15px;" class="help-block">YYYY-MM-DD</p></i>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">End Time</label>
            <div class="col-md-6">
                {{input value=model.endTime viewName="endTime" class="form-control" placeholder="End Time"}}
                 <i><p style="text-indent: 15px;" class="help-block">00:00:00</p></i>
            </div>
        </div>
        {{spin-button id="forapplication" isLoading=isLoading buttonText=buttonText action='saveData' class="col-md-offset-3 col-md-3"}}
        {{#link-to 'status.detail' model.id}}<button class="btn-form btn-danger col-md-3">Cancel</button>{{/link-to}}
    </form>
</section>