<section class="row">
    <form>
    <div id="container">   
        <p class="key"><span style="color:red;">Required *</span></p>
        <p><label class="field" for="Title">Title:<span style="color:red;">*</span></label>{{input type="text" value=model.title viewName="title" class="form-control" placeholder="Project Title"}}</p>

        <p><label class="field" for="Description">Description:<span style="color:red;">*</span></label>{{input type="text" value=model.description viewName="description" class="form-control" placeholder="Project Description"}}</p>

        <p><label class="field" for="StartDate">Start Date:<span style="color:red;">*</span></label>{{input value=model.startDate id="datepicker" viewName="startDate" class="form-control" placeholder="Start Date"}}</p>
            <p class="help-block"><i>Format: MM/DD/YYYY</i></p>

        <p><label class="field" for="StartTime">Start Time:</label>{{input value=controllers.status/detail.startTime viewName=startTime class="form-control" placeholder="Start Time" type="time"}}</p>
            <p class="help-block"><i>Format: 00:00 AM/PM</i></p>
        
        <p><label class="field" for="EndDate">End Date:<span style="color:red;">*</span></label>{{input value=model.endDate id="datepicker2"  viewName="endDate" class="form-control" placeholder="End Date"}}</p>
            <p class="help-block"><i>Format: MM/DD/YYYY</i></p>
        
        <p><label class="field" for="EndTime">End Time:</label>{{input value=model.endTime viewName="endTime" class="form-control" placeholder="End Time" type="time"}}</p>
            <p class="help-block"><i>Format: 00:00 AM/PM</i></p>
        
        <span style="text-align:center;margin:0 auto;">{{spin-button id="forapplication" isLoading=isLoading buttonText=buttonText action='saveData'}}</span>

        <div class="cancel">{{#link-to 'status.detail' model.id}}Revert Changes{{/link-to}}</div>
    </div>
    </form>
</section>

<script>

$(function() {
if(!window.location.hash) {
        window.location = window.location + '#loaded';
        window.location.reload();
}
    $("#datepicker").datepicker();
    $("#datepicker2").datepicker();
});
$(function() {
    $("timepicker").timepicker();
    $("timepicker2").timepicker();
});

</script>